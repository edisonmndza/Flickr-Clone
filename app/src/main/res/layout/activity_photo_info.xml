<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundToolbarColor"
    tools:context=".PhotoInfo">

    <android.support.v7.widget.Toolbar
        android:id="@+id/infotoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolBarStyle"
        app:title="Info" />


    <EditText
        android:id="@+id/inputtitle"
        android:layout_width="296dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infotoolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/title"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/inputdescription"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputtitle"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/description"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/inputlocation"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputdescription"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/location"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/inputuser"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_below="@+id/inputlocation"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/user"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/inputtags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputuser"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/tags"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/title"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_below="@+id/infotoolbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:text="Title:"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/description"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_below="@+id/inputtitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:text="Description:"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/location"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_below="@+id/inputdescription"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:text="Location:"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_below="@+id/inputlocation"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:text="Posted By:"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tags"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_below="@+id/inputuser"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:text="Tags:"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/timecreated"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_below="@+id/inputtags"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:text="Time Created:"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/inputtimecreated"
        android:layout_width="315dp"
        android:layout_height="33dp"
        android:layout_below="@+id/inputtags"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@+id/timecreated"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="16sp" />

</RelativeLayout>